<?xml version="1.0"?>
<tool id="amrfinderplus_database_fetcher" name="AmrFinderPlus" tool_type="manage_data" version="1.0.0+galaxy0" profile="19.01">
    <description>database fetcher</description>
    <requirements>
        <requirement type="package" version="1.20.1">wget</requirement>
        <requirement type="package" version="3.7">python</requirement>
    </requirements>
    <command detect_errors="exit_code">
    <![CDATA[
        python '$__tool_directory__/amrfinderplus_database_fetcher.py'
          '${out_file}'
          #if $database_version:
            --db-version '${database_version}'
          #end if
    ]]>
    </command>
    <inputs>
        <param name="name" type="text" optional="true" label="Name for this database" help="" />
        <param name="database_version" type="select" label="Database version" help="" >
            <option value="latest" selected="True">latest available version</option>
            <option value="3.6" >version 3.6</option>
            <option value="3.2" >version 3.2</option>
        </param>
    </inputs>
    <outputs>
        <data name="out_file" format="data_manager_json" />
    </outputs>
    <tests>
    </tests>
</tool>
